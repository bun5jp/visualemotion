<br>
    <h1>CONTACT</h1><br>
    <p class="index_message">ご質問やご意見はこちらからお願いいたします<br></p>
</head>

  <% if @contact.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <ul>
        <% @contact.errors.each do |attr, msg| %>
　　　　　<li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<body>
  <br>
  <br>
  <p>NAME</p>
  <%= f.hidden_field :name %>
  <%= f.text_field :name, :class=>"text" %>
  <br>
  <br>
  <p>EMAIL</p>
  <%= f.hidden_field :email %>
  <%= f.text_field :email, :class=>"text" %>
  <br>  
  <br>
  <p>MESSAGE</p>
  <%= f.hidden_field :message %>
  <%= f.text_area :message, :class=>"text", :size=>"40x5" %>
  <br>
  <br>

  
  <br>
  <div id="box"><%= f.submit 'CONFIRM', :class => "button" %></div>
  <% end %>

