<%= form_for @contact, :url => contact_confirm_path do |f| %>

<!-- メニューバー　-->
<p id="backhome"><%= link_to 'Home', 'top' %></p>
<p id="book_request"><%= link_to 'Book Request', 'request' %></p>
<p id="terms_of_conditions"><%= link_to 'Terms of Conditions', 'law' %></p>
