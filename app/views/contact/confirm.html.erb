<!DOCTYPE html>
<html>
  <head>
    <title>VISUALEMOTION/contact</title>
    <%= stylesheet_link_tag    'contact', 'data-turbolinks-track' => true %>

    <!-- メニューバー　-->
<p id="backhome"><%= link_to 'Home', 'top' %></p>
<p id="terms_of_conditions"><%= link_to 'Terms of Conditions', 'law' %></p>
      <!-- メニューバー　-->

    <div class="page-header">
      <h1>CONTACT</h1>
      <br>  
      <br>
    </div>
  </head>
 
  <body>
  <%= form_for @contact, :url => contact_thanks_path do |f| %>
    <p>NAME</p>
    <%= f.hidden_field :name %>
    <span><%= @contact.name %><span>
    <br>  
    <br>
    <p>EMAIL</p>
    <%= f.hidden_field :email %>
    <span><%= @contact.email %><span>
    <br>  
    <br>
    <p>MESSAGE</p>
    <%= f.hidden_field :message %>
    <span><%= simple_format(@contact.message) %><span>
    <br>  
    <br>
    <div id="box"><%= f.submit 'SEND!', :class => "button", disable_with: "SENDING..." %></div>
    <% end %>

  </body>
</html>


  